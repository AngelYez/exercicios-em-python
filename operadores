n1 = int(input("digite um valor: "))
n2 = int(input("digite outro valor: "))
s = n1 + n2
sub = n1 - n2
p = n1 ** n2
m = n1 * n2
d = n1 / n2
di = n1 // n2
r = n1 % n2
print(f"a soma e: {s}, a subtracao e: {sub}, a potenciacao e: {p}, a multiplicacao e: {m}", end= " ")
print(f"a divisao e: {d}, a divisao inteira e: {di} e o resto e: {r}! ")
